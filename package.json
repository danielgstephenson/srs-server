{
  "name": "srs-server",
  "version": "1.0.0",
  "scripts": {
    "build:server": "npx tsc -build ./src",
    "build:client": "npx parcel build ./src/client/client.html --dist-dir \"dist/client\"",
    "build:manager": "npx parcel build ./src/manager/manager.html --dist-dir \"dist/manager\"",
    "build": "npm run build:server && npm run build:client && npm run build:manager",
    "start": "node ./dist",
    "dev": "npm run build && npm run start"
  },
  "author": "Daniel Stephenson",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "json-2-csv": "^5.5.9",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/fs-extra": "^11.0.4",
    "parcel": "^2.15.0",
    "ts-standard": "^12.0.2",
    "typescript": "^5.8.3"
  },
  "ts-standard": {
    "project": "src/tsconfig.json",
    "ignore": [
      "dist"
    ]
  }
}
